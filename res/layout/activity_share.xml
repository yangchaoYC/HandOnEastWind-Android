<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:padding="15dp"
	    android:background="#AA823C"	  
	    android:orientation="vertical"
	    >
    <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="@string/share"
          android:textSize="16sp"
          android:textColor="#FFFFFF"
        />
    </LinearLayout>
    
    <View  
       android:layout_height="1dp" 
       android:background="#A0A0A0"       
       android:layout_width="fill_parent"
       ></View>     
    
      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:paddingBottom="30dp"
        >
           <ImageView
	        android:layout_width= "wrap_content"
	        android:layout_height= "wrap_content"
	        android:src= "@drawable/launch_dongfeng"
	        android:layout_marginTop="2dp"
	        />
        
           <LinearLayout 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingLeft="8dp"
	      
            >
              <TextView
                      android:id="@+id/lauch_dongfeng"
                      android:layout_width= "wrap_content"
                      android:layout_height= "wrap_content"
                      android:textColor= "#8E8E8E"
                      android:textSize= "28sp"                    
                      android:text= "@string/lauch_dongfeng"
                        />
               
                     <LinearLayout 
						            android:layout_width="fill_parent"
							        android:layout_height="wrap_content"
							        android:orientation="horizontal"
							        android:paddingTop="1dp"   						     							        
							        android:weightSum="8"							     							      
						            >
						             <TextView
				                      android:id="@+id/lauch_platform1"		    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"				                     
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 
				                      android:gravity="center"  
				                      android:layout_weight="1" 		                             
				                      android:text= "@string/lauch_platform1"
				                        />
						             <TextView		    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"				                  
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 	
				                      android:gravity="center"         
				                      android:text= "@string/lauch_platform2"
				                      android:layout_weight="1"
				                        />
						              <TextView		    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"				                  
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 
				                      android:gravity="center"     		                             
				                      android:text= "@string/lauch_platform3"
				                      android:layout_weight="1"
				                        />
						               <TextView		    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"				                  
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 		
				                      android:gravity="center"                                  
				                      android:text= "@string/lauch_platform4"
				                      android:layout_weight="1"
				                        />
						                <TextView		    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"				                  
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 	
				                      android:gravity="center"     	                             
				                      android:text= "@string/lauch_platform5"
				                      android:layout_weight="1"
				                        />
						                 <TextView		    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"				                  
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 
				                      android:gravity="center"     		                             
				                      android:text= "@string/lauch_platform6"
				                      android:layout_weight="1"
				                        />
						                  <TextView		    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"				                  
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 
				                      android:gravity="center"     		                             
				                      android:text= "@string/lauch_platform7"
				                      android:layout_weight="1"
				                        />
						              <TextView
				                      android:id="@+id/lauch_platform8"			    
				                      android:layout_width= "wrap_content"
				                      android:layout_height= "wrap_content"
				                      android:gravity="center"   
				                      android:textColor= "#909090"                     
				                      android:textSize ="9sp" 	
				                      android:layout_weight="1"	                             
				                      android:text= "@string/lauch_platform8"
				                        />
		                       </LinearLayout>
            
                  </LinearLayout>
    
                     <TextView
	                      android:id="@+id/lauch_phone"
	                      android:layout_width= "wrap_content"
	                      android:layout_height= "wrap_content"
	                      android:textColor= "#8E8E8E"
	                      android:textSize= "12sp"
	                      android:paddingLeft="8dp"
	                      android:paddingTop="18dp"
	                      android:text= "@string/lauch_phone"
                      />
        
   </LinearLayout>
   
      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        >

       <ImageView
           android:layout_width="160dp"
           android:layout_height="160dp"
           
           android:src="@drawable/erwei"/>
       
       
       <TextView 
          android:layout_width= "wrap_content"
	      android:layout_height= "wrap_content"
          android:text="@string/share_code"
          android:layout_marginTop="30dp"
          />
      </LinearLayout>
   
</LinearLayout>
